<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MT19073_Quiz_Activity"
    android:paddingBottom="15dp"
    android:paddingTop="15dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/text_view_for_score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="@color/color2"
        android:textSize="20dp"
        android:hint="Score"
        android:background="@color/color_score"/>

    <TextView
        android:id="@+id/text_view_for_quiz"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/text_view_for_score"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color2"
        android:background="@color/color_quiz"
        android:textSize="20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/button_add_color"
        android:id="@+id/button1_quiz"
        android:layout_below="@+id/text_view_for_quiz"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/button2_quiz"
        android:layout_below="@+id/button1_quiz"
        android:layout_centerHorizontal="true"
        android:background="@color/button_add_color"
        android:layout_marginTop="30dp" />
    <Button
    android:layout_width="match_parent"
    android:layout_height="70dp"
        android:id="@+id/button3_quiz"
        android:background="@color/button_add_color"
    android:layout_below="@+id/button2_quiz"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp" />
    <Button
    android:layout_width="match_parent"
    android:layout_height="70dp"
        android:id="@+id/button4_quiz"
        android:background="@color/button_add_color"
    android:layout_below="@+id/button3_quiz"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp" />
</RelativeLayout>
</ScrollView>