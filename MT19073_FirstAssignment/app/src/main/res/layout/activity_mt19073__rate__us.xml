<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MT19073_Rate_Us">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:id="@+id/text_view_rate_us"
            android:text="@string/text_view_rate_us"/>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="151dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="300dp"
            android:background="@color/button_add_color"
            android:shadowColor="@color/color2"
            android:text="@string/submit_button"
            android:textSize="20dp" />
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_bar"

            android:layout_marginTop="150dp"
            android:stepSize="0.5"
            android:numStars="5"
            android:layout_centerHorizontal="true"
            android:background="@color/rate_color"/>
    </RelativeLayout>

</ScrollView>